<%= form_for @user, html: {id: "sign-up-form", class: "form-horizontal"} do |user_fields| %>
  <h1 id="main-action">Sign up</h1>
  <div class="form-elements">
    <%= user_fields.fields_for :profile do |profile_fields| %>
    <div class="form-group">
      <%= profile_fields.text_field :first_name, placeholder: "First Name" %>
      <%= profile_fields.text_field :last_name, placeholder: "Last Name", class: "pull-right"%>
    </div>
    <div class="form-group">
      <%= display_form_errors(@user, :email) %>
      <%= user_fields.text_field :email, placeholder: "Email", class: "wide-box" %>
    </div>
    <div class="form-group">
      <%= display_form_errors(@user, :password) %>
      <%= user_fields.password_field :password, placeholder: "Your New Password", class: "wide-box" %>
    </div>
    <div class="form-group">
      <%= display_form_errors(@user, :password_confirmation) %>
      <%= user_fields.password_field :password_confirmation, placeholder: "Confirm Your Pasword", class: "wide-box" %>
    </div>
    <h1>Birthday</h1>
      <div class="form-group">
        <%= profile_fields.date_field :birthday, data: { provide: 'datepicker'} %><br>
      </div>
      <div class="form-group">
        <%= profile_fields.radio_button :gender, 'Female' %> Female
        <%= profile_fields.radio_button :gender, 'Male' %> Male
      </div>
    <% end %>
    
    <%= user_fields.submit "Sign Up!", id: "sign-up-button" %>
  </div>
<% end %>
