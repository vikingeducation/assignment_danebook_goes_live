<div id="about-edit">
  <div class="container everything-except-navbar">

    <div class="row">
      <div class="col-xs-12">

        <div class="cover-photo-container">
          <img src="http://s3.amazonaws.com/viking_education/web_development/web_app_eng/hogwarts_small.jpg">
        </div>

        <div class="profile-photo">
          <img src="http://s3.amazonaws.com/viking_education/web_development/web_app_eng/harry_potter_small.jpg">
        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class= "user-navigation">

          <div class="btn-group" role="group" aria-label="user-nav-buttons">
            <%= link_to "Timeline", timeline_path, :class => "btn", :role => "button" %>
            <%= link_to "About", about_path, :class => "btn", :id => "current", :role => "button" %>
            <%= link_to photos_path, :class => "btn", :role => "button" do %>
              Photos <span class='user-nav-numbers'>(123)</span>
            <% end %>
            <%= link_to friends_path, :class => "btn", :role => "button" do %>
              Friends <span class='user-nav-numbers'>(123)</span>
            <% end %>
          </div>

        </div>
      </div>
    </div>

    <main>

      <div class = "row">
        <div class = "col-xs-12">
          <header>
            <h1>Edit Profile</h1>
          </header>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="content-container">
            <form class="form-horizontal">
              <div class="row">
                <div class="col-xs-5 left">

                  <h3>
                    Basic Information
                  </h3>
                  <table class="table">
                    <tbody>
                      <tr>
                        <th scope="row">Birthday:</th>
                        <td>
                          July 31st, 1980
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">College:</th>
                        <td>
                          <div class="form-group">
                            <input type="text" class="form-control form-control-left" id="college" value="Hogwarts College">
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Hometown:</th>
                        <td>
                          <div class="form-group">
                            <input type="text" class="form-control form-control-left" id="hometown" value="Godrick's Hollow, England">
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Currently Lives:</th>
                        <td>
                          <div class="form-group">
                            <input type="text" class="form-control form-control-left" id="currently-lives" value="Godrick's Hollow, England">
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                  <h3>
                    Contact Information
                  </h3>
                  <table class="table">
                    <tbody>
                      <tr>
                        <th scope="row">Email:</th>
                        <td>harry_potter@hogwarts.edu</td>
                      </tr>
                      <tr>
                        <th scope="row">Telephone:</th>
                        <td>
                          <div class="form-group">
                            <input type="text" class="form-control form-control-left" id="telephone" value="555-123-4567">
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>

                </div>

                <div class="col-xs-7 right">

                  <div class="form-group">
                    <label for="input-words-to-live-by" class="control-label">
                      <h3>
                        Words to Live By
                      </h3>
                    </label>
                      <textarea class="form-control" rows="2" id="input-words-to-live-by" placeholder="What inspires you?">
