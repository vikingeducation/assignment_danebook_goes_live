				<div class="col-md-2 bordered-column">
					<%= link_to "Timeline", timeline_path, class: "faked-b" %>
				</div>
				<div class="col-md-2 bordered-column" id="clicked-button">
					<%= link_to "About", about_path, class: "faked-b", id: "clicked-button" %>
				</div>
				<div class="col-md-2 bordered-column">
					<%= link_to "Photos", photos_path, class: "faked-b" %> (123) 
