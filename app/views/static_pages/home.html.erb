        <!-- Signup form header -->
        <div class="col-md-12">
          <h1 class="signup-header">Sign Up</h1>
        </div>
      </div>

      <div class="row">
        <!-- signup form -->
        <div class="col-md-12">
          <form action="#" method="post">
            <div class="form-group">
              <div class="col-md-5 form-group">
                <input type="text" class="form-control" placeholder="First Name">
              </div>

              <div class="col-md-5 form-group">
                <input type="text" class="form-control" placeholder="Last Name">
              </div>
            </div>

            <div class="col-md-10 form-group">
              <input type="email" class="form-control" placeholder="Your Email">
            </div>

            <div class="col-md-10 form-group">
              <input type="password" class="form-control" placeholder="Your New Password">
            </div>

            <div class="col-md-10 form-group">
              <input type="password" class="form-control" placeholder="Confirm Your Password">
            </div>

            <div class="col-md-10 form-group">
              <label for="">Enter Your Birthday</label>
              <div class="form-inline">
                <select class="form-control">
                  <option>Month</option>
                </select>
                <select class="form-control">
                  <option>Day</option>
                </select>
                <select class="form-control">
                  <option>Year</option>
                </select>
              </div>
            </div>

            <div class="col-md-10 form-group">
              <label class="radio-inline">
                <input type="radio" name="genderRadioOptions" id="gender-female" value="female"> Female
              </label>
              <label class="radio-inline">
                <input type="radio" name="genderRadioOptions" id="gender-male" value="option2"> Male
              </label>
            </div>

            <div class="col-md-10 form-group">
              <button type="submit" class="btn btn-default btn-block" id="signup-button">Sign Up!</button>
            </div>
          </form>
        </div>
      </div>
    </article>
